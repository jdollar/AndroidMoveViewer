<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="defaultTable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:weightSum">100</item>
    </style>

    <style name="defaultTableRow">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="successRow" parent="defaultTableRow">
        <item name="android:background">#115a00</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="errorRow" parent="defaultTableRow">
        <item name="android:background">#A00000</item>
    </style>

</resources>
